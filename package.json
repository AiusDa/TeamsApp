{
  "name": "team-app",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "webpack-dev-server",
    "clean": "rimraf build",
    "start": "node ./build/server.js",
    "build": "yarn clean && webpack --config webpack.config.js",
    "build:watch": "yarn clean && webpack --watch --config webpack.config.js",
    "nodemon": "nodemon ./build/server.js",
    "serve": "concurrently \"yarn nodemon\" \"yarn build:watch\"",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "test": "jest",
    "beautify": "prettier --write 'src/**/*.ts'"
  },
  "dependencies": {
    "@hapi/joi": "^15.1.0",
    "body-parser": "^1.19.0",
    "boom": "^7.3.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-joi-validation": "^2.0.0",
    "lodash": "^4.17.15",
    "mongoose": "^5.6.9"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/boom": "^7.3.0",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/hapi__joi": "^15.0.3",
    "@types/jest": "^24.0.17",
    "@types/joi": "^14.3.3",
    "@types/lodash": "^4.14.136",
    "@types/mongoose": "^5.5.12",
    "@types/node": "^12.7.1",
    "concurrently": "^4.1.1",
    "eslint": "^6.1.0",
    "eslint-plugin-import": "^2.18.2",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.6"
  }
}
